rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // This function checks for a specific email address.
    // NOTE: This is less secure than using custom claims for role-based access control.
    function isAdmin() {
        return isSignedIn() && request.auth.token.email == 'ss.deepu@gmail.com';
    }

    // User profiles are readable by any signed-in user.
    // Any signed-in user can create their own profile, which is crucial for the signup flow.
    // A user can only update or delete their own profile.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }
    
    // Routes can be read by any signed-in user.
    // Admins can create and delete routes.
    // Admins can update any field, while signed-in users can only update location for tracking.
    match /routes/{routeId} {
        allow read: if isSignedIn();
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['currentLocation', 'updatedAt']));
    }
  }
}
