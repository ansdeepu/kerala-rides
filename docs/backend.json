{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "role": {
          "type": "string",
          "enum": ["user", "admin"],
          "description": "The user's role in the application."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["uid", "email", "createdAt"]
    },
    "Route": {
        "title": "Bus Route",
        "description": "Defines a bus route with a name and a series of stops.",
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "The name of the route (e.g., 'Pathanamthitta - Kollam')."
            },
            "stops": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": { "type": "string" },
                        "arrivalTime": { "type": "string" },
                        "actualArrivalTime": { "type": "string" },
                        "location": {
                            "type": "object",
                            "properties": {
                                "lat": { "type": "number" },
                                "lng": { "type": "number" }
                            },
                            "required": ["lat", "lng"]
                        }
                    },
                    "required": ["name", "location", "arrivalTime"]
                }
            },
             "currentLocation": {
                "type": "object",
                "properties": {
                    "lat": { "type": "number" },
                    "lng": { "type": "number" }
                }
            },
            "status": {
                "type": "string",
                "enum": ["On Time", "Delayed", "Early", "Not Started", "Finished"],
                "description": "The current status of the bus."
            },
            "updatedAt": {
                "type": "string",
                "format": "date-time",
                "description": "The timestamp of the last location update."
            }
        },
        "required": ["name", "stops"]
    },
    "Trip": {
      "title": "Daily Trip",
      "description": "Represents a single day's run of a specific route, tracking actual performance.",
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "description": "The date of the trip in YYYY-MM-DD format."
        },
        "stops": {
          "$ref": "#/entities/Route/properties/stops"
        }
      },
      "required": ["date", "stops"]
    }
  },
  "auth": {
    "providers": ["email", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public information about a user, accessible by others."
    },
    "/routes/{routeId}": {
        "schema": { "$ref": "#/entities/Route" },
        "description": "Stores all available bus routes, which are treated as active buses."
    },
    "/routes/{routeId}/history/{tripId}": {
      "schema": { "$ref": "#/entities/Trip" },
      "description": "Stores the historical performance data for each day a route runs. The tripId should be the date in YYYY-MM-DD format."
    }
  }
}
